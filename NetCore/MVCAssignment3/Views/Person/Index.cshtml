@using MVCAssignment3.Models.Entities
@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
    var Message = TempData["Message"] as string;
}
<h1>People</h1>
<hr />
@if (!string.IsNullOrEmpty(@Message))
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<a class="btn btn-success mb-3" asp-action="Add">Create new person</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Full Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Dob</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Birth Place</th>
            <th scope="col">Graduated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    <a asp-action="Detail" asp-route-id="@item.Id">@item.FullName</a>
                </th>
                <td>
                    @(item.Gender == true ? "Male" : "Female")
                </td>
                <td>@item.Dob</td>
                <td>@item.PhoneNumber</td>
                <td>@item.BirthPlace</td>
                <td>@item.IsGraduated</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>