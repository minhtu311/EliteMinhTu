@model MVCAssignment3.Models.Entities.Person
@{
    ViewData["Title"] = "Detail";
}
@* @ViewBag.PersonName = @Model.FullName *@
<h1>Detail person</h1>
<hr />
<table class="table table-hover">
    <tbody>
        <tr>
            <th scope="row">First Name</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th scope="row">Last Name</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th scope="row">Gender</th>
            <td>@(Model.Gender == true ? "Male":"Female")</td>
        </tr>
        <tr>
            <th scope="row">Dob</th>
            <td>@Model.Dob</td>
        </tr>
        <tr>
            <th scope="row">Phone number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th scope="row">Birth Place</th>
            <td>@Model.BirthPlace</td>
        </tr>
        <tr>
            <th scope="row">Graduated</th>
            <td>@Model.IsGraduated</td>
        </tr>
    </tbody>
</table>
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
  Delete
</button>
<a class="btn btn-warning" asp-action="Index">Back</a>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure delete this person?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id" asp-route-name="@Model.FullName">Delete</a>
      </div>
    </div>
  </div>
</div>