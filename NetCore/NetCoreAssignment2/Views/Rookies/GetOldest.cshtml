@model NetCoreAssignment2.Models.Person
@{
    ViewData["Title"] = "GetOldest";
}

<h1>The Oldest</h1>
<hr />
<table class="table table-hover">
    <tbody>
        <tr>
            <th scope="row">First Name</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th scope="row">Last Name</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th scope="row">Gender</th>
            <td>@(Model.Gender == true ? "Male":"Female")</td>
        </tr>
        <tr>
            <th scope="row">Dob</th>
            <td>@Model.Dob</td>
        </tr>
        <tr>
            <th scope="row">Phone number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th scope="row">Birth Place</th>
            <td>@Model.BirthPlace</td>
        </tr>
        <tr>
            <th scope="row">Graduated</th>
            <td>@Model.IsGraduated</td>
        </tr>
    </tbody>
</table>